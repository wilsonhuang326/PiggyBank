<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/addingTrans"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    //收入支出按钮
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="70dp">
        <Button
            android:id="@+id/expense_category_list"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="支出"
            android:layout_weight="1"/>
        <Button
            android:id="@+id/income_category_list"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="收入"
            android:layout_weight="1"/>

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="#FFE4E1"
        android:layout_weight="2">
        <GridView
            android:id="@+id/category_list_wName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:numColumns="4"
            android:layout_weight="1">
        </GridView>
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"

        android:layout_weight="1"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">
            <Button
                android:id="@+id/trans_amount"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="输入金额"
                android:layout_weight="1"
                />


            <Button
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="$￥"/>
        </LinearLayout>

        <Button
            android:id="@+id/trans_date"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:text="日期"/>
        <EditText
            android:id="@+id/trans_info"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:hint="备注"/>

    </LinearLayout>



</LinearLayout>