<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/item_transaction_layout"
    android:orientation="horizontal">


        <ImageView
            android:id="@+id/item_transaction_image"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:src="@drawable/ic_brokenimage" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_weight="8"
            android:orientation="vertical">

            <TextView
                android:id="@+id/item_transaction_name"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="4"
                android:text="NULL"
                android:textColor="@color/black"
                android:textSize="30dp" />

            <TextView
                android:id="@+id/item_transaction_notes"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:text="NULL" />
        </LinearLayout>

        <TextView
            android:id="@+id/item_transaction_amount"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="15dp"
            android:layout_weight="1"
            android:text="-99999999"
            android:maxLength="10"
            android:textColor="@color/black"
            android:textSize="30dp" />


</LinearLayout>